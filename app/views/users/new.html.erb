<h1> Sign Up </h1>

<%=form_for :user do |f|%>
    <%=f.text_field :name, placeholder: "Name", autocomplete: "off"%> <br><br>

    <%=f.text_field :email, placeholder: "Email", autocomplete: "off"%> <br><br>

    <%=f.password_field :password, placeholder: "Password"%> <br><br>

    <%=f.password_field :password_confirmation, placeholder: "Password Confirmation"%> <br><br>

    <%=f.submit "Submit", id: "submit"%>
<%end%>
